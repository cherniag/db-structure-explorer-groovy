       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="mobi.nowtechnologies.server.web.PaymentServiceFacade" />

    <bean id="mtvnz.PaymentPolicyModelService" class="mobi.nowtechnologies.server.web.model.mtvnz.PaymentPolicyModelServiceImpl">
