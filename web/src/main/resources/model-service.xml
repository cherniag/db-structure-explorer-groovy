    </bean>

    <bean name="communityServiceFactory" class="mobi.nowtechnologies.server.web.model.CommunityServiceFactory" />

    <bean id="mtvnz.PinModelService" class="mobi.nowtechnologies.server.web.model.mtvnz.PinPinModelServiceImpl"/>

    <bean id="mtvnz.EnterPhoneModelService" class="mobi.nowtechnologies.server.web.model.mtvnz.EnterPhoneModelServiceImpl" />

    <bean id="mtvnz.PaymentModelService" class="mobi.nowtechnologies.server.web.model.mtvnz.PaymentModelServiceImpl"/>

    <alias name="mtvnzPaymentSystemService" alias="mtvnz.PSMSPaymentService" />

</beans>
