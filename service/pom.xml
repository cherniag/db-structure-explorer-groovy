    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <configuration>
                            <resources>
                                <resource>
                                    <filtering>true</filtering>
                                    <directory>${project.basedir}/src/main/resources/META-INF</directory>
                                    <includes>
                                        <include>*.MF</include>
                                    </includes>
                                </resource>
                            </resources>
                            <outputDirectory>
                                ${project.basedir}/target/classes/version
                            </outputDirectory>
                        </configuration>
                        <id>copy-resources</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

