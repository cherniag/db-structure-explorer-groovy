<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean name="soap.subscriberService" class="uk.co.o2.soa.subscriberservice.SubscriberService">
        <constructor-arg value="classpath:META-INF/wsdl/subscriberservice_2_0.xml"/>
    </bean>

    <bean name="soap.SubscriberPortDecorator" class="uk.co.o2.soa.utils.SubscriberPortDecorator">
        <constructor-arg name="service" ref="soap.subscriberService"/>
        <constructor-arg name="endpoint" value="${o2.service.endpoint.subscriber_2_0}"/>
        <constructor-arg name="username" value="${o2.service.security.token.username}"/>
        <constructor-arg name="password" value="${o2.service.security.token.password}"/>
    </bean>
</beans>