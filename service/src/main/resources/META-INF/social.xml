<?xml version="1.0" encoding="UTF-8"?>
<beans default-init-method="init"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    <!-- Google Plus -->
    <bean id="service.googlePlusTemplateProvider" class="mobi.nowtechnologies.server.service.social.googleplus.GooglePlusTemplateProviderImpl"/>
    <bean id="service.GooglePlusService" class="mobi.nowtechnologies.server.service.social.googleplus.GooglePlusService"/>

    <!-- Facebook -->
    <bean id="service.facebookOperationsAdaptor" class="mobi.nowtechnologies.server.service.social.facebook.impl.FacebookOperationsAdaptor"/>
    <bean id="service.FacebookClient" class="mobi.nowtechnologies.server.service.social.facebook.impl.FacebookClientImpl"/>

    <bean id="service.FacebookService" class="mobi.nowtechnologies.server.service.social.facebook.FacebookService">
        <property name="userId" value="${mobi.nowtechnologies.server.service.social.facebook.FacebookService.userId}"/>
        <property name="userProfileImageUrlId" value="${mobi.nowtechnologies.server.service.social.facebook.FacebookService.userProfileImageUrlId}"/>
    </bean>

    <!-- Email -->
    <bean id="service.MailService" class="mobi.nowtechnologies.server.service.MailService">
        <property name="mailSender" ref="service.MailSender" />
    </bean>

    <import resource="social-application-tests.xml" />
</beans>
