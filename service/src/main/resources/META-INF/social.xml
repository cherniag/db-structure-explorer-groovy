<?xml version="1.0" encoding="UTF-8"?>
<beans default-init-method="init"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="service.facebookTemplateProvider" class="mobi.nowtechnologies.server.service.social.facebook.FacebookTemplateProviderImpl"/>
    <bean id="service.FacebookDataConverter" class="mobi.nowtechnologies.server.service.social.facebook.FacebookDataConverter"/>
    <bean id="service.FacebookService" class="mobi.nowtechnologies.server.service.social.facebook.FacebookService"/>

    <bean id="service.MailService" class="mobi.nowtechnologies.server.service.MailService">
        <property name="mailSender" ref="service.MailSender" />
    </bean>

    <!-- Application properties -->
    <bean id="serviceMessageSource" class="mobi.nowtechnologies.server.shared.message.CommunityResourceBundleMessageSourceImpl">
        <property name="basenames">
            <list>
                <value>file:#{systemProperties['catalina.base']}/conf/services</value>
                <value>classpath:services</value>
            </list>
        </property>
        <property name="defaultEncoding" value="utf-8" />
        <property name="fileEncodings" value="utf-8" />
        <property name="cacheSeconds" value="180" />
        <property name="useCodeAsDefaultMessage" value="true" />
    </bean>

    <!-- Override for the case of APPLICATION TESTS profile -->
    <beans profile="application-tests">
        <!-- Facebook -->
        <bean id="service.dummyFacebookTokenComposer" class="mobi.nowtechnologies.server.apptests.facebook.AppTestDummyFacebookTokenComposer" />
        <bean id="service.facebookTemplateProvider" class="mobi.nowtechnologies.server.apptests.facebook.AppTestFacebookTemplateProvider" />
        <bean id="service.O2Service" class="mobi.nowtechnologies.server.apptests.provider.o2.O2ServiceStub">
            <property name="phoneExtensionsService" ref="phoneExtensionsService"/>
        </bean>

        <bean id="phoneExtensionsService" class="mobi.nowtechnologies.server.apptests.provider.o2.PhoneExtensionsService"/>

        <!-- Email -->
        <bean id="mailModelSerializer" class="mobi.nowtechnologies.server.apptests.email.MailModelSerializer" />
        <bean id="service.MailService" class="mobi.nowtechnologies.server.apptests.email.DbMailService" />
    </beans>
</beans>
