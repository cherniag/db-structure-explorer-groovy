<?xml version="1.0" encoding="UTF-8"?>
<beans default-init-method="init"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- Google Plus -->
    <bean id="service.GooglePlusOperationsAdaptor" class="mobi.nowtechnologies.server.social.service.googleplus.impl.GooglePlusOperationsAdaptor"/>
    <bean id="service.GooglePlusClient" class="mobi.nowtechnologies.server.social.service.googleplus.impl.GooglePlusClientImpl"/>

    <bean id="service.GooglePlusService" class="mobi.nowtechnologies.server.social.service.googleplus.GooglePlusService"/>

    <!-- Facebook -->
    <bean id="service.facebookOperationsAdaptor" class="mobi.nowtechnologies.server.social.service.facebook.impl.FacebookOperationsAdaptor"/>
    <bean id="service.FacebookClient" class="mobi.nowtechnologies.server.social.service.facebook.impl.FacebookClientImpl"/>

    <bean id="service.FacebookService" class="mobi.nowtechnologies.server.social.service.facebook.FacebookService">
        <property name="userId" value="${FacebookService.userId}"/>
        <property name="userProfileImageUrlId" value="${FacebookService.userProfileImageUrlId}"/>
    </bean>

    <!-- Email -->
    <bean id="service.MailService" class="mobi.nowtechnologies.server.service.MailService">
        <property name="mailSender" ref="service.MailSender" />
    </bean>

    <import resource="social-application-tests.xml" />
</beans>
