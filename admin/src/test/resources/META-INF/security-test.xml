<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/jdbc
		http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd">

	<import resource="classpath:security.xml" />

	<bean id="securityDataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="org.h2.Driver" />
		<property name="url" value="jdbc:h2:mem:test;DB_CLOSE_DELAY=-1" />
		<property name="username" value="root" />
		<property name="password" value="1" />
	</bean>

	<bean class="org.springframework.jdbc.datasource.init.DataSourceInitializer" name="initializer">
        <property name="dataSource" ref="securityDataSource"/>
        <property name="enabled" value="true"/>
        <property name="databasePopulator" ref="databasePopulator"/>
	</bean>

    <bean class="org.springframework.jdbc.datasource.init.ResourceDatabasePopulator" id="databasePopulator">
        <property name="scripts">
            <list>
                <value>classpath:META-INF/init-admin-test.sql</value>
            </list>
        </property>
    </bean>

</beans>