<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="shared.PostService" class="mobi.nowtechnologies.server.shared.service.PostService"/>

    <bean id="propertyPlaceholderConfigurer"
          class="org.jasypt.spring31.properties.EncryptablePropertyPlaceholderConfigurer"
          c:stringEncryptor-ref="configurationEncryptor"
          p:locations-ref="appPropertiesLocations"
          p:ignoreUnresolvablePlaceholders="true"
          p:ignoreResourceNotFound="true"/>

    <bean id="appPropResourceConfigurer"
          class="mobi.nowtechnologies.server.utils.AppPropResourceConfigurer"
          p:locations-ref="appPropertiesLocations"
          p:ignoreUnresolvablePlaceholders="true"
          p:ignoreResourceNotFound="true"/>

    <bean id="configurationEncryptor"
          class="org.jasypt.encryption.pbe.StandardPBEStringEncryptor">
        <property name="config">
            <bean
                    class="org.jasypt.encryption.pbe.config.SimplePBEConfig"
                    p:algorithm="PBEWithMD5AndDES"
                    p:password="#{environment.getProperty('pwd', 'secret')}"/>
        </property>
    </bean>


</beans>
