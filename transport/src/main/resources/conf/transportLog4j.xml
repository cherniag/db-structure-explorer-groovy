                   value="mobi.nowtechnologies.server.transport.controller.XPlayCapController mobi.nowtechnologies.server.transport.context.ContextController, mobi.nowtechnologies.server.transport.referrals.ReferralController, mobi.nowtechnologies.server.transport.controller.AccCheckController, mobi.nowtechnologies.server.transport.controller.AutoOptInController, mobi.nowtechnologies.server.transport.controller.FileController, mobi.nowtechnologies.server.transport.controller.ApplyInitPromoController, mobi.nowtechnologies.server.transport.controller.GetChartController, mobi.nowtechnologies.server.transport.controller.GetNewsController, mobi.nowtechnologies.server.transport.controller.SignUpDeviceController, mobi.nowtechnologies.server.transport.phonenumber.PhoneNumberController, mobi.nowtechnologies.server.transport.controller.ActivateVideoAudioFreeTrialController, mobi.nowtechnologies.server.transport.controller.SigninFacebookController, mobi.nowtechnologies.server.transport.controller.SignInEmailController, mobi.nowtechnologies.server.transport.controller.EmailGenerationController, mobi.nowtechnologies.server.transport.controller.GetStreamzineController, mobi.nowtechnologies.server.transport.controller.SigninGooglePlusController, mobi.nowtechnologies.server.transport.serviceconfig.ServiceConfigController"/>
