<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="sendChargeNotificationProcessorContainer" class="mobi.nowtechnologies.server.job.task.ProcessorContainer">
        <property name="processors">
            <list>
                <ref bean="sendChargeNotificationTaskProcessor"/>
            </list>
        </property>
    </bean>

    <bean id="sendPaymentErrorNotificationProcessorContainer" class="mobi.nowtechnologies.server.job.task.ProcessorContainer">
        <property name="processors">
            <list>
                <ref bean="sendPaymentErrorNotificationTaskProcessor"/>
                <ref bean="sendUnsubscribeNotificationTaskProcessor"/>
            </list>
        </property>
    </bean>

    <!-- Task processors config -->
    <bean id="task.AbstractTaskProcessor" class="mobi.nowtechnologies.server.job.task.AbstractUserNotificationTaskProcessor" abstract="true">
        <property name="taskService" ref="task.TaskService"/>
        <property name="userNotificationService" ref="service.UserNotificationService"/>
    </bean>

    <bean id="sendChargeNotificationTaskProcessor" class="mobi.nowtechnologies.server.job.task.SendChargeNotificationTaskProcessor" parent="task.AbstractTaskProcessor"/>

    <bean id="sendPaymentErrorNotificationTaskProcessor" class="mobi.nowtechnologies.server.job.task.SimpleUserNotificationTaskProcessor" parent="task.AbstractTaskProcessor">
        <property name="messageKey" value="sms.notification.on.payment.error.text"/>
        <property name="supportedTaskClass" value="mobi.nowtechnologies.server.persistence.domain.task.SendPaymentErrorNotificationTask"/>
        <property name="nzSubscriberInfoRepository" ref="NZSubscriberInfoRepository"/>
    </bean>

    <bean id="sendUnsubscribeNotificationTaskProcessor" class="mobi.nowtechnologies.server.job.task.SimpleUserNotificationTaskProcessor" parent="task.AbstractTaskProcessor">
        <property name="messageKey" value="sms.notification.on.user.was.unsubscribed.text"/>
        <property name="supportedTaskClass" value="mobi.nowtechnologies.server.persistence.domain.task.SendUnsubscribeNotificationTask"/>
        <property name="nzSubscriberInfoRepository" ref="NZSubscriberInfoRepository"/>
    </bean>
    <!-- End task processors config -->

</beans>