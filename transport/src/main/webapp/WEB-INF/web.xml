	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>file:${catalina.base}/conf/transportLog4j.xml</param-value>
	</context-param>
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>60000</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<!-- The context params that read by ContextLoaderListener -->

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:META-INF/service.xml;classpath:META-INF/dao.xml;classpath:META-INF/shared.xml</param-value>
	</context-param>

	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>transport</param-value>
	</context-param>

	<!-- This listener will load other application context file in addition 
		to springweb-servlet.xml -->

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>transport</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>transport</servlet-name>
		<url-pattern>/service/*</url-pattern>
	</servlet-mapping>
	
	

</web-app>