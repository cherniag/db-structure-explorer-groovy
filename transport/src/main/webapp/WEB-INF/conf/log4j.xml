<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Errors Transport Logs -->
	<appender name="transportErrorsAppender" class="org.apache.log4j.rolling.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/errors-transport.log" />
		<param name="encoding" value="UTF-8" />
		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="${catalina.base}/logs/errors-transport_%d{yyyy-ww}.gz" />
		</rollingPolicy>
		<layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
			<param name="ConversionPattern" value="%-24d{ISO8601}:  [%15.15t] [%.20X{command} %X{userName} from %X{community} with %X{remoteAddr} remote address] %-5p %30.30c - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="WARN" />
			<param name="LevelMax" value="FATAL" />
			<param name="AcceptOnMatch" value="FALSE" />
		</filter>
	</appender>
	
	<!-- Transport Controller Logs -->
	<appender name="transportControllerAppender" class="org.apache.log4j.rolling.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/ctrl-transport.log" />
		<param name="encoding" value="UTF-8" />
		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="${catalina.base}/logs/ctrl-transport_%d{yyyy-ww}.gz" />
		</rollingPolicy>
		<layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
			<param name="ConversionPattern" value="%-24d{ISO8601}:  [%15.15t] [%.20X{command} %X{userName} from %X{community}] %-5p %30.30c - %m%n" />
		</layout>
		<filter class="mobi.nowtechnologies.server.shared.log.ClassContextFilter">
			<param name="contextKey" value="class" />
			<param name="classNames" value="mobi.nowtechnologies.server.transport.controller.EntityController, mobi.nowtechnologies.server.controller.VersionController, mobi.nowtechnologies.server.transport.controller.FileController, mobi.nowtechnologies.server.transport.controller.ApplyInitPromoController, mobi.nowtechnologies.server.transport.controller.GetChartController, mobi.nowtechnologies.server.transport.controller.GetNewsController, mobi.nowtechnologies.server.transport.controller.GetPurchasedContentInfoController, mobi.nowtechnologies.server.transport.controller.SingUpDeviceController" />
			<param name="acceptOnMatch" value="true" />
		</filter>
	</appender>
	
	<!-- Notification Job -->
	<appender name="notificationJobAppender" class="org.apache.log4j.rolling.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/jobs-push-notification.log" />
		<param name="encoding" value="UTF-8" />
		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="${catalina.base}/logs/jobs-push-notification_%d{yyyy-ww}.gz" />
		</rollingPolicy>
		<layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
			<param name="ConversionPattern" value="%-24d{ISO8601}:  [%15.15t] %-5p %30.30c - %m%n" />
		</layout>
		<filter class="mobi.nowtechnologies.server.shared.log.ClassContextFilter">
			<param name="contextKey" value="class" />
			<param name="classNames" value="mobi.nowtechnologies.server.job.NotificationJob" />
			<param name="acceptOnMatch" value="true" />
		</filter>
	</appender>
	
	<!-- Sms According To Law Job -->
	<appender name="smsAccordingToLawJobAppender" class="org.apache.log4j.rolling.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/jobs-smsAccordingToLaw.log" />
		<param name="encoding" value="UTF-8" />
		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="${catalina.base}/logs/jobs-smsAccordingToLaw_%d{yyyy-ww}.gz" />
		</rollingPolicy>
		<layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
			<param name="ConversionPattern" value="%-24d{ISO8601}:  [%15.15t] %-5p %30.30c - %m%n" />
		</layout>
		<filter class="mobi.nowtechnologies.server.shared.log.ClassContextFilter">
			<param name="contextKey" value="class" />
			<param name="classNames" value="mobi.nowtechnologies.server.job.SmsAccordingToLawJob" />
			<param name="acceptOnMatch" value="true" />
		</filter>
	</appender>
	
	<!-- Payment Retry Job -->
	<appender name="paymentRetryJobAppender" class="org.apache.log4j.rolling.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/jobs-create-retry-payment.log" />
		<param name="encoding" value="UTF-8" />
		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="${catalina.base}/logs/jobs-create-retry-payment_%d{yyyy-ww}.gz" />
		</rollingPolicy>
		<layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
			<param name="ConversionPattern" value="%-24d{ISO8601}:  [%15.15t] %-5p %30.30c - %m%n" />
		</layout>
		<filter class="mobi.nowtechnologies.server.shared.log.ClassContextFilter">
			<param name="contextKey" value="class" />
			<param name="classNames" value="mobi.nowtechnologies.server.job.CreateRetryPaymentJob" />
			<param name="acceptOnMatch" value="true" />
		</filter>
	</appender>
	
	<!-- Payment Retry Job -->
	<appender name="cleanExpiredPaymentJobAppender" class="org.apache.log4j.rolling.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/jobs-clean-exired-payment.log" />
		<param name="encoding" value="UTF-8" />
		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="${catalina.base}/logs/jobs-clean-exired-payment_%d{yyyy-ww}.gz" />
		</rollingPolicy>
		<layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
			<param name="ConversionPattern" value="%-24d{ISO8601}:  [%15.15t] %-5p %30.30c - %m%n" />
		</layout>
		<filter class="mobi.nowtechnologies.server.shared.log.ClassContextFilter">
			<param name="contextKey" value="class" />
			<param name="classNames" value="mobi.nowtechnologies.server.job.CleanExpirePendingPaymentsJob" />
			<param name="acceptOnMatch" value="true" />
		</filter>
	</appender>
	
	<!-- Payment Appenders -->
	<appender name="pendingPaymentJobAppender" class="org.apache.log4j.rolling.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/jobs-create-pending-payment.log" />
		<param name="encoding" value="UTF-8" />
		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="${catalina.base}/logs/jobs-create-pending-payment_%d{yyyy-ww}.gz" />
		</rollingPolicy>
		<layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
			<param name="ConversionPattern" value="%-24d{ISO8601}:  [%15.15t] %-5p %30.30c - %m%n" />
		</layout>
		<filter class="mobi.nowtechnologies.server.shared.log.ClassContextFilter">
			<param name="contextKey" value="class" />
			<param name="classNames" value="mobi.nowtechnologies.server.job.CreatePendingPaymentJob, mobi.nowtechnologies.server.service.payment.impl.PendingPaymentServiceImpl, org.springframework.transaction.support.TransactionSynchronizationManager, org.springframework.orm.jpa.JpaTransactionManager" />
			<param name="acceptOnMatch" value="true" />
		</filter>
	</appender>
	
	<!-- Payment Executor Appender -->
	<appender name="paymentExecutionAppender" class="org.apache.log4j.rolling.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/pool-payment-executor.log" />
		<param name="encoding" value="UTF-8" />
		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="${catalina.base}/logs/pool-payment-executor_%d{yyyy-ww}.gz" />
		</rollingPolicy>
		<layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
			<param name="ConversionPattern" value="%-24d{ISO8601}: [%15.15t] [%X{userId}:%X{userName} from %X{community}] %-5p %30.30c - %m%n" />
		</layout>

		<filter class="mobi.nowtechnologies.server.shared.log.ClassContextFilter">
			<param name="contextKey" value="class" />
			<param name="classNames"	value="mobi.nowtechnologies.server.job.executor.PendingPaymentExecutor$PendingPaymentTask, mobi.nowtechnologies.server.service.payment.impl.MigPaymentServiceImpl, org.springframework.transaction.support.TransactionSynchronizationManager, org.springframework.orm.jpa.JpaTransactionManager" />
			<param name="acceptOnMatch" value="true" />
		</filter>
	</appender>

	<!-- MIG Callback Controller Appender -->
	<appender name="migControllerAppender" class="org.apache.log4j.rolling.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/ctrl-mig.log" />
		<param name="encoding" value="UTF-8" />
		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="${catalina.base}/logs/ctrl-mig_%d{yyyy-ww}.gz" />
		</rollingPolicy>
		<layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
			<param name="ConversionPattern" value="%-24d{ISO8601}: %-5p %30.30c - %m%n" />
		</layout>

		<filter class="mobi.nowtechnologies.server.shared.log.ClassContextFilter">
			<param name="contextKey" value="class" />
			<param name="classNames"
				value="mobi.nowtechnologies.server.transport.controller.MigController" />
			<param name="acceptOnMatch" value="true" />
		</filter>
	</appender>
	
	<!-- ACC_CHECK command logs -->
	<appender name="accCheckAppender" class="org.apache.log4j.rolling.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/acc_check.log" />
		<param name="encoding" value="UTF-8" />
		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="${catalina.base}/logs/acc-check_%d.gz" />
		</rollingPolicy>
		<layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
			<param name="ConversionPattern" value="%-24d{ISO8601}:  [%15.15t] [%.20X{command} %X{userName} from %X{community}] %-5p %30.30c - %m%n" />
		</layout>
		<filter class="mobi.nowtechnologies.server.shared.log.ContextFilter">
			<param name="contextKey" value="ACC_CHECK" />
			<param name="acceptOnMatch" value="true" />
		</filter>
	</appender>
	
	<appender name="weeklyUpdateServiceFile" class="org.apache.log4j.rolling.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/weeklyUpdateService.log" />
		<param name="encoding" value="UTF-8" />
		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="${catalina.base}/logs/weeklyUpdateService_%d{yyyy-ww}.gz" />
		</rollingPolicy>
		<layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
			<!--The " ut " will be replace on current "unix time" value-->
			<param name="ConversionPattern"
				value="%-24d{ISO8601}:  [%15.15t] [%.20X{command} %X{userName} from %X{community}] %-5p %30.30c - %m%n" />
		</layout>
			<filter class="mobi.nowtechnologies.server.shared.log.ClassContextFilter">
			<param name="contextKey" value="class" />
			<param name="classNames"
				value="mobi.nowtechnologies.server.service.WeeklyUpdateService" />
			<param name="acceptOnMatch" value="true" />
		</filter>
	</appender>
	
	<!-- Transport User Notification Logs -->
	<appender name="userNotificationAppender" class="org.apache.log4j.rolling.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/user-notification-transport.log" />
		<param name="encoding" value="UTF-8" />
		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="${catalina.base}/logs/user-notification-transport_%d{yyyy-ww}.gz" />
		</rollingPolicy>
		<layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
			<param name="ConversionPattern" value="%-24d{ISO8601}:  [%15.15t] [%.20X{command} %X{userName} from %X{community}] %-5p %30.30c - %m%n" />
		</layout>
		<filter class="mobi.nowtechnologies.server.shared.log.ClassContextFilter">
			<param name="contextKey" value="class" />
			<param name="classNames" value="mobi.nowtechnologies.server.service.UserNotificationService" />
			<param name="acceptOnMatch" value="true" />
		</filter>
	</appender>
	
	<!-- Transport User SMS Notification Logs -->
	<appender name="userSMSNotificationAppender" class="org.apache.log4j.rolling.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/user-sms-notification-transport.log" />
		<param name="encoding" value="UTF-8" />
		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="${catalina.base}/logs/user-sms-notification-transport_%d{yyyy-ww}.gz" />
		</rollingPolicy>
		<layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
			<param name="ConversionPattern" value="%-24d{ISO8601}:  [%15.15t] [%.20X{command} %X{userName} from %X{community}] %-5p %30.30c - %m%n" />
		</layout>
		<filter class="mobi.nowtechnologies.server.shared.log.ClassContextFilter">
			<param name="contextKey" value="class" />
			<param name="classNames" value="mobi.nowtechnologies.server.service.aop.SMSNotification, mobi.nowtechnologies.server.job.Before48hPSMSPaymentJob" />
			<param name="acceptOnMatch" value="true" />
		</filter>
	</appender>
	
	<appender name="throttlingService" class="org.apache.log4j.rolling.RollingFileAppender">
                <param name="File" value="${catalina.base}/logs/throttlingService.log" />
                <param name="encoding" value="UTF-8" />
                <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
                        <param name="fileNamePattern" value="${catalina.base}/logs/throttlingService_%d{yyyy-ww}.gz" />
                </rollingPolicy>
                <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
                        <!--The " ut " will be replace on current "unix time" value-->
                        <param name="ConversionPattern"
                                value="%-24d{ISO8601},%t,%X{command},%X{userName},%X{device},%X{community},%m%n" />
                </layout>
		<filter class="mobi.nowtechnologies.server.shared.log.ClassContextFilter">
			<param name="contextKey" value="class" />
			<param name="classNames"
				value="mobi.nowtechnologies.server.service.impl.ThrottlingServiceImpl" />
			<param name="acceptOnMatch" value="true" />
		</filter>
	</appender>
	
	<!-- Payment Job Logs -->
	<logger name="mobi.nowtechnologies.server.job">
		<level value="INFO" />
		<appender-ref ref="pendingPaymentJobAppender" />
		<appender-ref ref="notificationJobAppender" />
		<appender-ref ref="paymentRetryJobAppender" />
		<appender-ref ref="cleanExpiredPaymentJobAppender" />
		<appender-ref ref="smsAccordingToLawJobAppender" />
	</logger>


	<!-- Payment Executor Logs -->
	<logger name="mobi.nowtechnologies.server.job.executor">
		<level value="INFO" />
		<appender-ref ref="paymentExecutionAppender" />
		<appender-ref ref="smsAccordingToLawJobAppender" />
	</logger>
	<logger name="org.springframework.orm.jpa">
		<level value="INFO" />
		<appender-ref ref="paymentExecutionAppender" />
		<appender-ref ref="pendingPaymentJobAppender" />
		<appender-ref ref="smsAccordingToLawJobAppender" />
		<appender-ref ref="userNotificationAppender" />
		<appender-ref ref="userSMSNotificationAppender" />
	</logger>
	<logger name="org.springframework.transaction">
		<level value="INFO" />
		<appender-ref ref="paymentExecutionAppender" />
		<appender-ref ref="pendingPaymentJobAppender" />
		<appender-ref ref="smsAccordingToLawJobAppender" />
		<appender-ref ref="userNotificationAppender" />
		<appender-ref ref="userSMSNotificationAppender" />
	</logger>
	
	<logger name="mobi.nowtechnologies.server.service.payment">
		<level value="INFO" />
		<appender-ref ref="paymentExecutionAppender" />
		<appender-ref ref="pendingPaymentJobAppender" />
		<appender-ref ref="smsAccordingToLawJobAppender" />
	</logger>
	
	<logger name="org.hibernate.SQL">
		<level value="INFO"></level>
		<appender-ref ref="paymentExecutionAppender" />
		<appender-ref ref="pendingPaymentJobAppender" />
		<appender-ref ref="weeklyUpdateServiceFile" />
		<appender-ref ref="smsAccordingToLawJobAppender" />
		<appender-ref ref="userNotificationAppender" />
		<appender-ref ref="userSMSNotificationAppender" />
	</logger>
	<logger name="org.hibernate.type">
		<level value="INFO"></level>
		<appender-ref ref="paymentExecutionAppender" />
		<appender-ref ref="pendingPaymentJobAppender" />
		<appender-ref ref="weeklyUpdateServiceFile" />
		<appender-ref ref="smsAccordingToLawJobAppender" />
		<appender-ref ref="userNotificationAppender" />
		<appender-ref ref="userSMSNotificationAppender" />
	</logger>
	<logger name="org.hibernate.cache">
		<level value="INFO"></level>
		<appender-ref ref="pendingPaymentJobAppender" />
		<appender-ref ref="smsAccordingToLawJobAppender" />
		<appender-ref ref="userNotificationAppender" />
		<appender-ref ref="userSMSNotificationAppender" />
	</logger>
	
	<logger name="org.springframework.ws.client.MessageTracing.sent">
		<level value="TRACE"></level>
		<appender-ref ref="paymentExecutionAppender"/>
	</logger>
	
	<logger name="org.springframework.ws.client.MessageTracing.sent">
		<level value="TRACE"></level>
		<appender-ref ref="paymentExecutionAppender"/>
	</logger>

	<!-- MIG Logger -->
	<logger name="mobi.nowtechnologies">
		<level value="INFO" />
		<appender-ref ref="accCheckAppender" />
		<appender-ref ref="migControllerAppender" />
		<appender-ref ref="transportControllerAppender" />
		<appender-ref ref="weeklyUpdateServiceFile" />
		<appender-ref ref="smsAccordingToLawJobAppender" />
		<appender-ref ref="userNotificationAppender" />
		<appender-ref ref="userSMSNotificationAppender" />
	</logger>
	<!-- END MIG Logger -->

	<root>
		<appender-ref ref="transportErrorsAppender" />
	</root>

</log4j:configuration>