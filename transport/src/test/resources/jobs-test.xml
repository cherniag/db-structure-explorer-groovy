<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--Business tasks job -->
    <bean id="businessTaskJob" class="mobi.nowtechnologies.server.job.BusinessTaskJob">
        <property name="taskService" ref="task.TaskService" />
        <property name="processorContainer" ref="task.ProcessorContainer" />
        <property name="tasksCount" value="${task.job.tasks.count}" />
        <property name="executor" ref="taskThreadExecutor" />
    </bean>
    <bean id="taskThreadExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="${task.job.executor.corePoolSize}"/>
        <property name="maxPoolSize" value="${task.job.executor.maxPoolSize}"/>
        <property name="queueCapacity" value="${task.job.executor.queueCapacity}"/>
    </bean>
    <!--End business tasks job -->

</beans>