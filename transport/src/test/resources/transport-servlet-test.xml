<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="/WEB-INF/transport-servlet.xml" />

    <bean id="propertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:application-test.properties</value>
            </list>
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="true" />
        <property name="ignoreResourceNotFound" value="true" />
    </bean>
    
    <bean id="schedulerTX" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="autoStartup" value="false" />
		<property name="triggers">
			<list>
			</list>
		</property>
	</bean>
	
    <bean id="throttlingService" class="mobi.nowtechnologies.server.service.impl.ThrottlingServiceImpl"/>

    <bean id="urlsProducer" class="mobi.nowtechnologies.server.httpinvoker.UrlsProducer"/>
    <bean id="restTemplate"  class="org.springframework.web.client.RestTemplate" />
    <bean id="videoAudioFreeTrialUrlStrategy" class="mobi.nowtechnologies.server.httpinvoker.VideoAudioFreeTrialUrlStrategy"/>
    <bean id="reporter" class="mobi.nowtechnologies.server.httpinvoker.Reporter">
        <property name="dir" value="classpath:http_invoker_report" />
    </bean>
</beans>
