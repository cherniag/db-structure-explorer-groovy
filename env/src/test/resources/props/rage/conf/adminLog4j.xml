<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM
        "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">

<!--Web log config file-->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="admin-RollingFileAppender" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/admin.log"/>
        <param name="encoding" value="UTF-8"/>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="${catalina.base}/logs/admin_%d{yyyy-ww}.gz"/>
        </rollingPolicy>
        <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
            <!--The " ut " will be replace on current "unix time" value-->
            <param name="ConversionPattern"
                   value="%-24d{ISO8601}:  [%15.15t] [%X{userName} from %X{communityUrl} with %X{remoteAddr} remote address] %-5p %30.30c - %m%n"/>
        </layout>
    </appender>

    <appender name="errors-admin-RollingFileAppender" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/errors-admin.log"/>
        <param name="encoding" value="UTF-8"/>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="${catalina.base}/logs/errors-admin_%d{yyyy-ww}.gz"/>
        </rollingPolicy>
        <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
            <!--The " ut " will be replace on current "unix time" value-->
            <param name="ConversionPattern"
                   value="%-24d{ISO8601}:  [%15.15t] [%X{userName} from %X{communityUrl} with %X{remoteAddr} remote address] %-5p %30.30c - %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="WARN"/>
            <param name="LevelMax" value="FATAL"/>
            <param name="AcceptOnMatch" value="FALSE"/>
        </filter>
    </appender>

    <appender name="business-logic-admin-RollingFileAppender" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/business-logic-admin.log"/>
        <param name="encoding" value="UTF-8"/>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="${catalina.base}/logs/business-logic-admin_%d{yyyy-ww}.gz"/>
        </rollingPolicy>
        <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
            <!--The " ut " will be replace on current "unix time" value-->
            <param name="ConversionPattern"
                   value="%-24d{ISO8601}:  [%15.15t] [%X{userName} from %X{communityUrl} with %X{remoteAddr} remote address] %-5p %30.30c - %m%n"/>
        </layout>
    </appender>

    <appender name="persistence-admin-RollingFileAppender" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/persistence-admin.log"/>
        <param name="encoding" value="UTF-8"/>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="${catalina.base}/logs/persistence-admin_%d{yyyy-ww}.gz"/>
        </rollingPolicy>
        <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
            <!--The " ut " will be replace on current "unix time" value-->
            <param name="ConversionPattern"
                   value="%-24d{ISO8601}:  [%15.15t] [%X{userName} from %X{communityUrl} with %X{remoteAddr} remote address] %-5p %30.30c - %m%n"/>
        </layout>
    </appender>

    <logger name="org.springframework">
        <level value="INFO"></level>
        <appender-ref ref="business-logic-admin-RollingFileAppender"/>
    </logger>
    <logger name="org.apache.commons">
        <level value="DEBUG"></level>
        <appender-ref ref="business-logic-admin-RollingFileAppender"/>
    </logger>
    <logger name="net.sf.hibernate.cfg">
        <level value="DEBUG"></level>
        <appender-ref ref="persistence-admin-RollingFileAppender"/>
    </logger>
    <logger name="org.hibernate.SQL">
        <level value="INFO"></level>
        <appender-ref ref="persistence-admin-RollingFileAppender"/>
    </logger>
    <logger name="org.hibernate.type">
        <level value="TRACE"></level>
        <appender-ref ref="persistence-admin-RollingFileAppender"/>
    </logger>
    <logger name="org.hibernate.annotations.common.Version">
        <level value="TRACE"></level>
        <appender-ref ref="business-logic-admin-RollingFileAppender"/>
    </logger>
    <logger name="mobi.nowtechnologies.server.service">
        <level value="DEBUG"></level>
        <appender-ref ref="business-logic-admin-RollingFileAppender"/>
    </logger>
    <logger name="mobi.nowtechnologies.server.persistence">
        <level value="DEBUG"></level>
        <appender-ref ref="persistence-admin-RollingFileAppender"/>
    </logger>
    <logger name="mobi.nowtechnologies.server.admin">
        <level value="DEBUG"></level>
        <appender-ref ref="admin-RollingFileAppender"/>
    </logger>

    <logger name="org.apache.tiles">
        <level value="DEBUG"></level>
    </logger>

    <root>
        <appender-ref ref="errors-admin-RollingFileAppender"/>
    </root>

</log4j:configuration>