<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM
        "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">

<!--Web log config file-->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="track-repo-RollingFileAppender" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/track-repo.log"/>
        <param name="encoding" value="UTF-8"/>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="${catalina.base}/logs/track-repo_%d{yyyy-ww}.gz"/>
        </rollingPolicy>
        <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
            <!--The " ut " will be replace on current "unix time" value-->
            <param name="ConversionPattern"
                   value="%-24d{ISO8601}:  [%15.15t] [%X{userName} from %X{communityUrl} with %X{remoteAddr} remote address] %-5p %30.30c - %m%n"/>
        </layout>
    </appender>

    <appender name="errors-track-repo-RollingFileAppender" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/errors-track-repo.log"/>
        <param name="encoding" value="UTF-8"/>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="${catalina.base}/logs/errors-track-repo_%d{yyyy-ww}.gz"/>
        </rollingPolicy>
        <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
            <!--The " ut " will be replace on current "unix time" value-->
            <param name="ConversionPattern"
                   value="%-24d{ISO8601}:  [%15.15t] [%X{userName} from %X{communityUrl} with %X{remoteAddr} remote address] %-5p %30.30c - %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="WARN"/>
            <param name="LevelMax" value="FATAL"/>
            <param name="AcceptOnMatch" value="FALSE"/>
        </filter>
    </appender>

    <appender name="persistence-track-repo-RollingFileAppender" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/persistence-track-repo.log"/>
        <param name="encoding" value="UTF-8"/>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="${catalina.base}/logs/persistence-track-repo_%d{yyyy-ww}.gz"/>
        </rollingPolicy>
        <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
            <!--The " ut " will be replace on current "unix time" value-->
            <param name="ConversionPattern"
                   value="%-24d{ISO8601}:  [%15.15t] [%X{userName} from %X{communityUrl} with %X{remoteAddr} remote address] %-5p %30.30c - %m%n"/>
        </layout>
    </appender>
    <logger name="com.rackspacecloud">
        <level value="DEBUG"></level>
        <appender-ref ref="track-repo-RollingFileAppender"/>
    </logger>
    <logger name="mobi.nowtechnologies.server.persistence">
        <level value="DEBUG"></level>
        <appender-ref ref="persistence-track-repo-RollingFileAppender"/>
    </logger>
    <logger name="mobi.nowtechnologies">
        <level value="DEBUG"></level>
        <appender-ref ref="track-repo-RollingFileAppender"/>
    </logger>

    <root>
        <level value="DEBUG"></level>
        <appender-ref ref="errors-track-repo-RollingFileAppender"/>
    </root>

</log4j:configuration>
