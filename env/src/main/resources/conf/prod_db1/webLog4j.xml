<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM
        "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">

<!--Web log config file-->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="web-profile-RollingFileAppender" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/web-profile.csv"/>
        <param name="encoding" value="UTF-8"/>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="${catalina.base}/logs/profile-web_%d{yyyy-MM-dd}.gz"/>
        </rollingPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="time=[%-24d{ISO8601}]; uri=[%X{command}]; userId=[%X{userId}]; userName=[%X{userName}]; userMobile=[%X{userMobile}]; community=[%X{community}]; remoteAddr=[%X{remoteAddr}]; %m%n"/>
        </layout>
        <filter class="mobi.nowtechnologies.server.shared.log.RegExpLogCommandFilter">
            <param name="onMatch" value="1"/>
            <param name="onMismatch" value="-1"/>
            <param name="logCommandRegExp" value=".*\.html"/>
        </filter>
    </appender>

    <appender name="thridPartyRequestsProfileAppender" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/profile-web-3rdPartyRequests.csv"/>
        <param name="encoding" value="UTF-8"/>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="${catalina.base}/logs/profile-web-3rdPartyRequests_%d{yyyy-MM-dd}.gz"/>
        </rollingPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="time=[%-24d{ISO8601}]; tPRExecutionDurationMillis=[%X{tPRExecutionDurationMillis}]; tPRUrl=[%X{tPRUrl}]; tPRUserId=[%X{tPRUserId}]; tPRUserName=[%X{tPRUserName}]; tPRUserMobile=[%X{tPRUserMobile}]; tPRBody=[%X{tPRBody}]; tPRNameValuePairs=[%X{tPRNameValuePairs}]; tPRResponse=[%X{tPRResponse}]; tPRResult=[%X{tPRResult}]; tPRErrorMessage=[%X{tPRErrorMessage}]%n"/>
        </layout>
    </appender>
    <appender name="web-RollingFileAppender" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/web.log"/>
        <param name="encoding" value="UTF-8"/>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="${catalina.base}/logs/web_%d{yyyy-MM-dd}.gz"/>
        </rollingPolicy>
        <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
            <!--The " ut " will be replace on current "unix time" value-->
            <param name="ConversionPattern"
                   value="%-24d{ISO8601}: ut [%15.15t] %-5p %30.30c - %m%n"/>
        </layout>
    </appender>

    <appender name="errors-web-RollingFileAppender" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/errors-web.log"/>
        <param name="encoding" value="UTF-8"/>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="${catalina.base}/logs/errors-web_%d{yyyy-MM-dd}.gz"/>
        </rollingPolicy>
        <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
            <!--The " ut " will be replace on current "unix time" value-->
            <param name="ConversionPattern"
                   value="%-24d{ISO8601}: ut [%15.15t] %-5p %30.30c - %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="WARN"/>
            <param name="LevelMax" value="FATAL"/>
            <param name="AcceptOnMatch" value="FALSE"/>
        </filter>
    </appender>

    <appender name="business-logic-web-RollingFileAppender" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/business-logic-web.log"/>
        <param name="encoding" value="UTF-8"/>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="${catalina.base}/logs/business-logic-web_%d{yyyy-MM-dd}.gz"/>
        </rollingPolicy>
        <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
            <!--The " ut " will be replace on current "unix time" value-->
            <param name="ConversionPattern"
                   value="%-24d{ISO8601}: ut [%15.15t] %-5p %30.30c - %m%n"/>
        </layout>
    </appender>

    <appender name="persistence-web-RollingFileAppender" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/persistence-web.log"/>
        <param name="encoding" value="UTF-8"/>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="${catalina.base}/logs/persistence-web_%d{yyyy-MM-dd}.gz"/>
        </rollingPolicy>
        <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
            <!--The " ut " will be replace on current "unix time" value-->
            <param name="ConversionPattern"
                   value="%-24d{ISO8601}: ut [%15.15t] %-5p %30.30c - %m%n"/>
        </layout>
    </appender>

    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <param name="target" value="System.out"/>
        <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
            <!--The " ut " will be replace on current "unix time" value-->
            <param name="ConversionPattern"
                   value="%p  %d{yyyy.MM.dd HH\:mm\:ss,SSS/zzz} ut userId\=[%X{userId}] userName\=[%X{userName}] community\=[%X{community}] command\=[%X{command}] MESSAGEID\=[%X{MESSAGEID}] %c.%M() %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="TRACE"/>
            <param name="LevelMax" value="INFO"/>
            <param name="AcceptOnMatch" value="FALSE"/>
        </filter>
    </appender>

    <appender name="stderr" class="org.apache.log4j.ConsoleAppender">
        <param name="target" value="System.err"/>
        <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
            <!--The " ut " will be replace on current "unix time" value-->
            <param name="ConversionPattern"
                   value="%p  %d{yyyy.MM.dd HH\:mm\:ss,SSS/zzz} ut userId\=[%X{userId}] userName\=[%X{userName}] community\=[%X{community}] command\=[%X{command}] MESSAGEID\=[%X{MESSAGEID}] %c.%M() %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="WARN"/>
            <param name="LevelMax" value="FATAL"/>
            <param name="AcceptOnMatch" value="FALSE"/>
        </filter>
    </appender>

    <appender name="slow-requests" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/slow-requests.log"/>
        <param name="encoding" value="UTF-8"/>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="${catalina.base}/logs/slow-requests_%d{yyyy-ww}.gz"/>
        </rollingPolicy>
        <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
            <param name="ConversionPattern" value="%-24d{ISO8601}: ut [%15.15t] %-5p %30.30c - %m%n"/>
        </layout>
    </appender>

    <appender name="web-RollingFileAppender2" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/web-new.log"/>
        <param name="encoding" value="UTF-8"/>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="fileNamePattern" value="${catalina.base}/logs/web-new_%d{yyyy-MM-dd}.gz"/>
        </rollingPolicy>
        <layout class="mobi.nowtechnologies.server.shared.log.UnixTimePatternLayout">
            <param name="ConversionPattern"
                   value="%-24d{ISO8601}: [%15.15t] [%.20X{command} %X{userName} from %X{community} with %X{remoteAddr} remote address] %-5p %30.30c - %m%n"/>
        </layout>
    </appender>

    <logger name="mobi.nowtechnologies.server.web.view.SlowRequestFilter">
        <level value="WARN"></level>
        <appender-ref ref="slow-requests"/>
    </logger>

    <logger name="org.springframework">
        <level value="INFO"></level>
        <appender-ref ref="business-logic-web-RollingFileAppender"/>
    </logger>
    <logger name="org.apache.commons">
        <level value="INFO"></level>
        <appender-ref ref="business-logic-web-RollingFileAppender"/>
    </logger>
    <logger name="net.sf.hibernate.cfg">
        <level value="INFO"></level>
        <appender-ref ref="persistence-web-RollingFileAppender"/>
    </logger>
    <logger name="org.hibernate.SQL">
        <level value="INFO"></level>
        <appender-ref ref="persistence-web-RollingFileAppender"/>
    </logger>
    <logger name="org.hibernate.type">
        <level value="INFO"></level>
        <appender-ref ref="persistence-web-RollingFileAppender"/>
    </logger>
    <logger name="org.hibernate.annotations.common.Version">
        <level value="INFO"></level>
        <appender-ref ref="business-logic-web-RollingFileAppender"/>
    </logger>
    <logger name="mobi.nowtechnologies.server.service">
        <level value="INFO"></level>
        <appender-ref ref="business-logic-web-RollingFileAppender"/>
    </logger>
    <logger name="mobi.nowtechnologies.server.persistence">
        <level value="INFO"></level>
        <appender-ref ref="persistence-web-RollingFileAppender"/>
    </logger>
    <logger name="mobi.nowtechnologies.server.web">
        <level value="INFO"></level>
        <appender-ref ref="web-RollingFileAppender"/>
        <appender-ref ref="web-RollingFileAppender2"/>
    </logger>

    <logger name="org.apache.tiles">
        <level value="INFO"></level>
    </logger>

    <logger name="PROFILE_LOGGER">
        <level value="DEBUG"/>
        <appender-ref ref="web-profile-RollingFileAppender"/>
    </logger>

    <logger name="THIRD_PARTY_REQUESTS_PROFILE_LOGGER">
        <level value="DEBUG"/>
        <appender-ref ref="thridPartyRequestsProfileAppender"/>
    </logger>

    <root>
        <level value="INFO"></level>
        <appender-ref ref="errors-web-RollingFileAppender"/>
    </root>

</log4j:configuration>
